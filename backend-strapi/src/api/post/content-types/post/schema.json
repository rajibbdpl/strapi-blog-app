{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Posts",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "regex": "^[A-Za-z\\d\\s\\-_,.!?'\"():]{5,200}$",
      "minLength": 5,
      "required": true,
      "maxLength": 200
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files",
        "images"
      ]
    },
    "Content": {
      "type": "text",
      "required": true,
      "maxLength": 2000,
      "minLength": 10
    },
    "publishedDate": {
      "type": "datetime",
      "required": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "bookmarkedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "bookmarkedPosts"
    }
  }
}
